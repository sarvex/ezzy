<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ushop="http://schemas.android.com/apk/res/com.shopezzy"
    android:layout_width="match_parent"
    android:layout_height="100.0dip" >

    <RelativeLayout
        android:id="@+id/imageL"
        android:layout_width="match_parent"
        android:layout_height="100.0dip" >

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="70.0dip"
                android:layout_height="80.0dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rem"
            android:layout_width="match_parent"
            android:layout_height="100.0dip"
            android:layout_toRightOf="@+id/image" >

            <com.shopezzy.TextView
                android:id="@+id/itemname"
                android:layout_width="match_parent"
                android:layout_height="50.0dip"
                android:layout_marginRight="5.0dip"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="2"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="5.0dip"
                android:textColor="#505050"
                android:textSize="15sp"
                ushop:font="Sansation_Regular.ttf" >
            </com.shopezzy.TextView>

            <LinearLayout
                android:id="@+id/remaining"
                android:layout_width="match_parent"
                android:layout_height="30.0dip"
                android:layout_below="@+id/itemname"
                android:orientation="horizontal"
                android:weightSum="3" >

                <com.shopezzy.TextView
                    android:id="@+id/weight"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="5.0dip"
                    android:singleLine="true"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    ushop:font="Sansation_Regular.ttf" >
                </com.shopezzy.TextView>

                <RelativeLayout
                    android:id="@+id/additems"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <Button
                        android:id="@+id/add"
                        android:layout_width="55.0dip"
                        android:layout_height="25.0dip"
                        android:background="@drawable/addselector"
                        android:gravity="center"
                        android:text="Add"
                        android:textColor="@drawable/additem_text"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/offer"
                android:layout_width="match_parent"
                android:layout_height="20.0dip"
                android:layout_alignParentBottom="true" >

                <com.shopezzy.TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="5.0dip"
                    android:singleLine="true"
                    android:text="10rs"
                    android:textColor="#505050"
                    android:textSize="13sp"
                    ushop:font="Rupee_Foradian.ttf" >
                </com.shopezzy.TextView>

                <View
                    android:id="@+id/v1"
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginTop="2.0dip"
                    android:layout_toRightOf="@+id/cost"
                    android:background="#898989"
                    android:visibility="gone" />

                <com.shopezzy.TextView
                    android:id="@+id/cost1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/v1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    android:visibility="gone"
                    ushop:font="Rupee_Foradian.ttf" >
                </com.shopezzy.TextView>

                <Button
                    android:id="@+id/offerpecent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="1.0dip"
                    android:layout_toRightOf="@+id/cost1"
                    android:background="@drawable/offer"
                    android:paddingLeft="3.0dip"
                    android:paddingRight="3.0dip"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout><!-- From: file:/C:/Users/Sarvex%20Jatasra/Workspace/ezzy/mobile/src/main/res/layout/searchitemview2.xml -->