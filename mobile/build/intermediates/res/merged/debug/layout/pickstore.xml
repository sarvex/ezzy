<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ushop="http://schemas.android.com/apk/res/com.shopezzy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="220.0dip"
        android:background="@drawable/store_background" >

        <View
            android:id="@+id/actionbargap"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <ImageView
            android:id="@+id/homeicon"
            android:layout_width="48.0dip"
            android:layout_height="45.0dip"
            android:layout_below="@+id/actionbargap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/store" />

        <com.shopezzy.TextView
            android:id="@+id/select3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/actionbargap"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="15.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#ef630f"
            android:textSize="13sp"
            ushop:font="Sansation_Regular.ttf" >
        </com.shopezzy.TextView>

        <com.shopezzy.TextView
            android:id="@+id/near"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeicon"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="20.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            ushop:font="Sansation_Regular.ttf" >
        </com.shopezzy.TextView>

        <Button
            android:id="@+id/changeLocation"
            android:layout_width="140.0dip"
            android:layout_height="40.0dip"
            android:layout_below="@+id/near"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/changelocation"
            android:gravity="center"
            android:text="Change Location"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/black80T"
        android:dividerHeight="1.0dip"
        android:listSelector="@android:color/transparent" >
    </ListView>

