<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ushop="http://schemas.android.com/apk/res/com.shopezzy"
    android:layout_width="match_parent"
    android:layout_height="80.0dip" >

    <RelativeLayout
        android:id="@+id/imageL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="70.0dip"
                android:layout_height="80.0dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rem"
            android:layout_width="match_parent"
            android:layout_height="80.0dip"
            android:layout_toRightOf="@+id/image" >

            <com.shopezzy.TextView
                android:id="@+id/itemname"
                android:layout_width="match_parent"
                android:layout_height="50.0dip"
                android:layout_marginRight="5.0dip"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="2"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="5.0dip"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                ushop:font="Sansation_Regular.ttf" >
            </com.shopezzy.TextView>

            <LinearLayout
                android:id="@+id/remaining"
                android:layout_width="match_parent"
                android:layout_height="30.0dip"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="3" >

                <com.shopezzy.TextView
                    android:id="@+id/weight"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="5.0dip"
                    android:singleLine="true"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    ushop:font="Sansation_Regular.ttf" >
                </com.shopezzy.TextView>

                <com.shopezzy.TextView
                    android:id="@+id/cost"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="5.0dip"
                    android:singleLine="true"
                    android:textColor="#898989"
                    android:textSize="12sp"
                    ushop:font="Rupee_Foradian.ttf" >
                </com.shopezzy.TextView>

                <RelativeLayout
                    android:id="@+id/additems"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20.0dip"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/minus"
                        android:layout_width="15.0dip"
                        android:layout_height="15.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3.0dip"
                        android:background="@drawable/minusitemselector" />

                    <com.shopezzy.TextView
                        android:id="@+id/number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18.0dip"
                        android:layout_toRightOf="@+id/minus"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        ushop:font="Rupee_Foradian.ttf" >
                    </com.shopezzy.TextView>

                    <Button
                        android:id="@+id/add"
                        android:layout_width="15.0dip"
                        android:layout_height="15.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3.0dip"
                        android:background="@drawable/additemselector" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>